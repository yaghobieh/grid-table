{
  "name": "@forgedevstack/grid-table",
  "version": "1.0.2",
  "description": "A powerful, headless grid table component for React with SCSS styling, drag-and-drop columns, filtering, sorting, and responsive mobile support",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./grid-table.css": "./dist/grid-table.css",
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs",
      "require": "./dist/hooks/index.js"
    },
    "./context": {
      "types": "./dist/context/index.d.ts",
      "import": "./dist/context/index.mjs",
      "require": "./dist/context/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "src/grid-table.scss"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean && npx sass src/grid-table.scss dist/grid-table.css --style compressed --no-source-map",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "release": "npm run build && npm publish --access public",
    "release:patch": "npm version patch && npm run release",
    "release:minor": "npm version minor && npm run release",
    "release:major": "npm version major && npm run release"
  },
  "keywords": [
    "react",
    "table",
    "grid",
    "data-table",
    "scss",
    "typescript",
    "drag-drop",
    "sorting",
    "filtering",
    "pagination",
    "responsive",
    "headless"
  ],
  "author": "John Yaghobieh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yaghobieh/grid-table.git"
  },
  "bugs": {
    "url": "https://github.com/yaghobieh/grid-table/issues"
  },
  "homepage": "https://forgedevstack.dev/table",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": false
    },
    "react-dom": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.77.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}
